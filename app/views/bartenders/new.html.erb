<h3>Create a New Bartender</h3>

<%= form_with url: "/bartenders", method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br/><br/>

  <%= f.label :age %>
  <%= f.number_field :age, min: 22, max: 75 %><br/><br/>

  <%= f.label :on_vacation %>
  <%= f.check_box :on_vacation %><br/><br/>

  <%= f.label :city %>
  <%= f.text_field :city %><br/><br/>

  <%= f.submit 'Create Bartender' %>
<% end %>
