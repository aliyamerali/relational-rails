<%= form_with url: "/bartenders/#{@bartender.id}/drinks", method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br/><br/>

  <%= f.label :cost %>
  <%= f.number_field :cost, in: 1.00..20.00, step: 1.00 %><br/><br/>

  <%= f.label :abv %>
  <%= f.number_field :abv, min: 5, max:18 %><br/><br/>

  <%= f.label :popular %>
  <%= f.check_box :popular %><br/><br/>

  <%= f.submit 'Create Drink' %>
<% end %>
