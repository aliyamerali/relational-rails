<%= form_with url: "/drinks/#{@drink.id}", method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, value: @drink.name %><br/><br/>

  <%= f.label :cost %>
  <%= f.number_field :cost, in: 1.00..20.00, step: 1.00, value: @drink.cost  %><br/><br/>

  <%= f.label :abv %>
  <%= f.number_field :abv, min: 5, max:18, value: @drink.abv  %><br/><br/>

  <%= f.label :popular %>
  <%= f.check_box :popular, value: @drink.popular  %><br/><br/>

  <%= f.submit 'Update Drink' %>
<% end %>
